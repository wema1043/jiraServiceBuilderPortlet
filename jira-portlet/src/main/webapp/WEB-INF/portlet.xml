<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>OpenClosedPortlet</portlet-name>
		<display-name>OpenClosedPortlet</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/views/openclosedportlet/view.xhtml</value>
		</init-param>
		<init-param>
			<name>javax.portlet.faces.bridgeEventHandler</name>
			<value>de.hska.wi.awp.datasource.event.BurnDownChartStoryPointEventHandler</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Open Closed Portlet</title>
			<short-title>OpenClosedPortlet</short-title>
			<keywords>Open Closed Portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		<supported-processing-event>
    		<qname xmlns:x="http://liferay.com/events">x:ipc.studentSelected</qname>
		</supported-processing-event>
		<supported-processing-event>
    		<qname xmlns:x="http://liferay.com/events">x:ipc.projectSelected</qname>
		</supported-processing-event>
	</portlet>
	
	<portlet>
		<portlet-name>BurnDownChartStoryPointsPortlet</portlet-name>
		<display-name>BurnDownChartStoryPointsPortlet</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/views/burndownstorypoints/view.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Burn Down Chart Storypoints</title>
			<short-title>BurnDownStoryPoints</short-title>
			<keywords>Burndown Storypoints</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
	<portlet>
		<portlet-name>Student_portlet</portlet-name>
		<display-name>Student_portlet</display-name>
		<portlet-class>javax.portlet.faces.GenericFacesPortlet</portlet-class>
		<init-param>
			<name>javax.portlet.faces.defaultViewId.view</name>
			<value>/views/studentportlet/view.xhtml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Student_portlet</title>
			<short-title>Student_portlet</short-title>
			<keywords>Student_portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<event-definition>
    	<qname xmlns:x="http://liferay.com/events">x:ipc.studentSelected</qname>
    	<value-type>java.lang.String</value-type>
    </event-definition>
    <event-definition>
    	<qname xmlns:x="http://liferay.com/events">x:ipc.projectSelected</qname>
    	<value-type>java.lang.String</value-type>
    </event-definition>
</portlet-app>